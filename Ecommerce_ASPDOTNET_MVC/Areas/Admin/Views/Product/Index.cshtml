@model List<Product>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Product List</h3>
        </div>
        <div class="col-6 text-end pb-3">
            <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;Create New Product
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr class="text-center">
                <th>Id</th>
                <th>Title</th>

                <th>ISBN</th>
                <th>Author</th>
                <th>Price</th>
                <th>Category</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderByDescending(u => u.Id))
            {
                <tr class="text-center">
                    <td>@obj.Id</td>
                    <td>@obj.Title</td>

                    <td>@obj.ISBN</td>
                    <td>@obj.Author</td>
                    <td>@obj.ListPrice</td>
                    <td>@obj.Category.Name</td>
                    <td></td>
                    <td>
                       <div class="d-flex justify-content-center align-items-center gap-2 flex-wrap">
                            <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id"
                               class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Upsert
                            </a>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger btn-sm">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

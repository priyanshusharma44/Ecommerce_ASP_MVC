@model List<Category>
<div class="container " style="margin-top:100px;">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Category List</h3>
        </div>
        <div class="col-6 text-end pb-3">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr class="text-center">
                <th>Id</th>
                <th>Name</th>
                <th>Display Order</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderByDescending(u => u.CategoryId))
            {
                <tr class="text-center">
                    <td>@obj.CategoryId</td>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                       <div class="d-flex justify-content-center align-items-center gap-2 flex-wrap">
                            <a asp-controller="Category" asp-action="Edit" asp-route-CategoryId="@obj.CategoryId" 
                               class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-CategoryId="@obj.CategoryId" 
                               class="btn btn-danger btn-sm">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
